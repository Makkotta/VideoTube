@using VideoTube.ViewModels.Homes
@model HomeViewModel

<div class="container-fluid pb-0">
    <div class="top-mobile-search">
        <div class="row">
            <div class="col-md-12">
                <form class="mobile-search">
                    <div class="input-group">
                        <input type="text" placeholder="Search for..." class="form-control">
                        <div class="input-group-append">
                            <button type="button" class="btn btn-dark"><i class="fas fa-search"></i></button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="top-category section-padding mb-0">
        <div class="row">
            <div class="col-md-12">
                <div class="main-title mb-4">
                    <div class="btn-group float-right right-action">
                        <a href="#" class="right-action-link text-gray" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fa fa-ellipsis-h" aria-hidden="true"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right">
                            <a class="dropdown-item" href="#"><i class="fas fa-fw fa-star"></i> &nbsp; Top Rated</a>
                            <a class="dropdown-item" href="#"><i class="fas fa-fw fa-signal"></i> &nbsp; Viewed</a>
                            <a class="dropdown-item" href="#"><i class="fas fa-fw fa-times-circle"></i> &nbsp; Close</a>
                        </div>
                    </div>
                    <h5>Channels Categories</h5>
                </div>
            </div>
            <div class="col-md-12">
                <div class="owl-carousel owl-carousel-category">
                    @foreach (var channel in Model.HomeChannels)
                    {
                        <div class="item">
                            <div class="text-center bg-white shadow-sm p-4 rounded channel-item">
                                <a href="#">
                                    <div class="channel-item-image mb-3">
                                        <img class="rounded-circle" src="@channel.Channel.Logo" alt>
                                        <div class="status-indicator bg-primary"><i class="fa fa-video text-white"></i></div>
                                    </div>
                                    <div class="channel-item-body">
                                        <p class="mb-1">@channel.Channel.Name <i data-toggle="tooltip" data-placement="top" title class="fa fa-check-circle text-success" data-original-title="Verified"></i></p>
                                        <small class="text-muted"><i class="fa fa-video"></i> @channel.VideoCount</small>
                                    </div>
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <hr class="mt-1 mb-4">
    <section class="pb-4">
        <div>
            <div class="main-title mb-4">
                <div class="btn-group float-right right-action">
                    <a href="#" class="right-action-link text-gray" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Sort by <i class="fa fa-caret-down" aria-hidden="true"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right">
                        <a class="dropdown-item" href="#"><i class="fas fa-fw fa-star"></i> &nbsp; Top Rated</a>
                        <a class="dropdown-item" href="#"><i class="fas fa-fw fa-signal"></i> &nbsp; Viewed</a>
                        <a class="dropdown-item" href="#"><i class="fas fa-fw fa-times-circle"></i> &nbsp; Close</a>
                    </div>
                </div>
                <h5>Featured Videos</h5>
            </div>
            <div class="row">
                @foreach (var video in Model.LastVideos)
                {
                    <div class="col-lg-3 col-md-6">
                        <div class="video-item">
                            <div class="video-item-image">
                                <a href="\channels\@video.ChannelId\videos\@video.Id">
                                    <div class="video-item-cate"></div>
                                    <div class="video-item-time">32:03</div>
                                    <img class="img-fluid" src="https://testaspstorageproject.blob.core.windows.net/thumbnails/@video.Thumbnail">
                                </a>
                            </div>
                            <div class="video-item-title mb-3">@video.Title</div>
                            <div class="video-item-user">
                                <div class="d-flex align-items-center">
                                    <div class="dropdown-list-image mr-3">
                                        <img class="rounded-circle" src="@video.Channel.Logo" alt>
                                    </div>
                                    <div class="font-weight-bold mr-2">
                                        <div class="text-truncate">@video.Channel.Name</div>
                                        <div class="small text-gray-500">@video.Created</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
</div>